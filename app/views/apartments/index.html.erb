<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Apartments" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Apartments</h1>
          <%= link_to "Back to Home",
  home_index_path,
  class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>

    <%= link_to "New apartment", new_apartment_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <table id="apartments" class="min-w-full table table-auto min-w-full divide-y divide-gray-300">
    <thead>
      <tr>
        <th 
          scope="col"
          class="py-3 pl-4 pr-3 text-left text-xs font-medium uppercase tracking-wide text-gray-500 sm:pl-0"
        >Price</th>
        <th
                    scope="col"
          class="py-3 pl-4 pr-3 text-left text-xs font-medium uppercase tracking-wide text-gray-500 sm:pl-0"

        >Floor</th>
        <th
                    scope="col"
          class="py-3 pl-4 pr-3 text-left text-xs font-medium uppercase tracking-wide text-gray-500 sm:pl-0"

        >Apartmentnumber</th>
        <th
                    scope="col"
          class="relative py-3 pl-3 pr-4 sm:pr-0"

          > 
          <span class="sr-only">Show</span>
        </th>
      </tr>
    </thead>
    <tbody class="divide-y divide-gray-200 bg-white">
      <% @apartments.each do |apartment| %>
        <tr>
          <%= render apartment %>
          <td class="relative whitespace-nowrap py-4 pl-3 pr-4 text-right text-sm font-medium sm:pr-0">
          <%= link_to "Show this apartment", apartment, class: "text-indigo-600 hover:text-indigo-900" %>
          </td>
        <% end %>
        </tr>

    </tbody>

  </table>
</div>
