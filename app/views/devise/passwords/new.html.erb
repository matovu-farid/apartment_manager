<div class=' w-100 d-flex flex-col justify-content-center align-items-center '>
  <div class='w-25 '>
    <h2>Forgot your password?</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class:'d-flex flex-column gap-2' }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :email, class: "form-label" %><br/>
        <%= f.email_field :email,
                      autofocus: true,
                      autocomplete: "email",
                      class: "form-control" %>
      </div>

      <div class="actions btn btn-primary">
        <%= f.submit "Send me reset password instructions" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>

  </div>
</div>
