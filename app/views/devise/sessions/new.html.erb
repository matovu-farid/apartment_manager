<div class=' w-100 d-flex flex-col justify-content-center align-items-center '>
  <div class='w-25 '>
    <h2 class="h1 fw-bold">Log in</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "container  d-flex justify-content-center align-items-center flex-column gap-2") do |f| %>
      <div class="field  py-2"">
        <%= f.label :email, class: "form-label" %><br/>
        <%= f.email_field :email,
                      autofocus: true,
                      autocomplete: "email",
                      class: "form-control" %>
      </div>

      <div class="field py-2">
        <%= f.label :password, class: "form-label" %><br/>
        <%= f.password_field :password,
                         autocomplete: "current-password",
                         class: "form-control" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field  py-2"">
          <%= f.check_box :remember_me, class: "form-check-input" %>
          <%= f.label :remember_me, class: "form-check-label" %>
        </div>
      <% end %>

      <div class="actions btn btn-primary py-2 px-4">
        <%= f.submit "Log in" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
