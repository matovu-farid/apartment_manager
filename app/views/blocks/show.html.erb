<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p
        class="
          py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block
        "
        id="notice"
      ><%= notice %></p>
    <% end %>

    <%= render @block %>
    <%= link_to "Add Apartments", new_apartment_path, class: "btn btn-primary" %>
    <%= link_to "Edit this block", edit_block_path(@block), class: "btn btn-primary" %>
    <%= link_to "Back to blocks", blocks_path, class: "btn btn-primary" %>

    <%= render "apartments/apartment_table", apartments: @block.apartments %>

    <div class="inline-block ml-2">
      <%= button_to "Delete block", @block, method: :delete, class: "btn btn-danger" %>
    </div>
  </div>
</div>
