<div class="w-full h-[80vh]">
  <div  class="flex w-full justify-end">

      <%= link_to "Back to blocks", blocks_path, class: "btn btn-outline-primary" %>
      <% if can? :edit, @block %>
        <%= link_to "Add Apartments", new_apartment_path, class: "btn btn-outline-primary" %>
        <%= link_to "Edit this block",
          edit_block_path(@block),
          class: "btn btn-outline-primary" %>
        <div class="inline-block ml-2">
          <%= button_to "Delete block", @block, method: :delete, class: "btn btn-danger" %>
        </div>
      <% end %>
    </div>

<div class="">
  <div class="">
    <% if notice.present? %>
      <p
        class="
          py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block
        "
        id="notice"
      ><%= notice %></p>
    <% end %>
    <%= render @block %>
    <%= render "apartments/apartment_table", apartments: @block.apartments %>
  </div>
</div>
</div>

