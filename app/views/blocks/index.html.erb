<div class="w-full">
  <% if notice.present? %>
    <p
      class="
        py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block
      "
      id="notice"
    ><%= notice %></p>
  <% end %>

  <% content_for :title, "Blocks" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Blocks</h1>
    <div class='d-flex gap-2'>
      <%= link_to "New block", new_block_path, class: "btn btn-outline-primary" %>
      <%= link_to "Back to Home", home_index_path, class: "btn btn-secondary" %>
    </div>
  </div>
  <%= render "block_table", blocks: @blocks %>

</div>
