<% if blocks.any? %>
  <div class='w-full d-flex align-items-center justify-content-center'>
    <div class='w-50'>
      <ul class="">
        <% blocks.each do |block| %>
          <li>
            <p  class= 'fw-bold h3' ><%= block.name%></p>
            <%= render "apartments/apartment_table", apartments: block.apartments %>
            <% if block.apartments.empty? %>
              <p class='text-secondary fst-italic'>Apartments attached to this block will be added here</p>
            <% end %>
          </li>
        <% end %>
      </ul>

    </div>
  </div>
<% end %>
