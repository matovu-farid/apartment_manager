<% if blocks.any? %>
<div class='w-full d-flex align-items-center justify-content-center'>
    <div class='w-50'>
        <ul class="">
            <% blocks.each do |block| %>
            <li class='flex gap-2'>

                <%= render block %>
                <div class='fw-bold h3 flex flex-col gap-2'>
                    <div class='flex gap-2 text-base items-center'>
                        <% if can? :edit,block %>

                        <%= link_to edit_block_path(block),class: '' do %>
                        <i class="fa-solid fa-pen-to-square"></i>
                        <% end %>
                        <% end %>
                        <%= link_to block ,class: '' do %>
                        <i class="fa-solid fa-bars"></i>
                        <% end %>
                        <% if can? :destroy, block %>
                        <%= button_to block,method: :delete ,class: '' do %>
                        <i class="fa-solid fa-trash text-red-500"></i>
                        <% end %>
                        <% end %>
                    </div>
                </div>
   
            </li>
            
            <% end %>
        </ul>
    </div>
</div>
<% end %>