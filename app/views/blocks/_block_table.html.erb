<% if blocks.any? %>
  <div class='w-full d-flex align-items-center justify-content-center'>
    <div class='w-50'>
      <ul class="">
        <% blocks.each do |block| %>
          <li>
            <p  class= 'fw-bold h3' ><%= block.name%>
              <%= link_to edit_block_path(block),class: 'btn ' do %>
                <i class="fa-solid fa-pen-to-square"></i>
              <% end %>
              <%= link_to block do %>
                <i class="fa-solid fa-bars"></i>
              <% end %>
              <%= button_to "Delete block",block,  method: :delete,class: "btn btn-danger" %>
            </p>
            <%= render "apartments/apartment_table", apartments: block.apartments %>
            <% if block.apartments.empty? %>
              <p class='text-secondary fst-italic'>Apartments attached to this block will be added here</p>
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>
