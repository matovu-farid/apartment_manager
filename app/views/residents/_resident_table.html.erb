<% if residents.any? %>
  <table id="residents" class="min-w-full table table-auto min-w-full divide-y divide-gray-300">
    <thead>
      <tr>
        <th scope="col"  class="py-3 pl-4 pr-3 text-left text-xs font-medium uppercase tracking-wide text-gray-500 sm:pl-0" >           Name
        </th>
        <th cope="col" class="py-3 pl-4 pr-3 text-left text-xs font-medium uppercase tracking-wide text-gray-500 sm:pl-0">
          PhysicalId
        </th>
        <th scope="col"class="py-3 pl-4 pr-3 text-left text-xs font-medium uppercase tracking-wide text-gray-500 sm:pl-0">
          Phonenumber
        </th>
        <th scope="col"class="py-3 pl-4 pr-3 text-left text-xs font-medium uppercase tracking-wide text-gray-500 sm:pl-0">
          Start Date
        </th>
        <th scope="col"class="py-3 pl-4 pr-3 text-left text-xs font-medium uppercase tracking-wide text-gray-500 sm:pl-0">
          Actions
        </th>
        <%if show ||=false%>
          <th scope="col" class="relative py-3 pl-3 pr-4 sm:pr-0">
            <span class="sr-only">Show</span>
          </th>
        <% end%>
      </tr>
    </thead>
    <tbody class="divide-y divide-gray-200 bg-white">
      <% residents.each do |resident| %>
        <tr>
          <%= render resident %>
          <%if show ||=false%>
            <td class="relative flex gap-2 whitespace-nowrap py-4 pl-3 pr-4 text-right text-sm font-medium sm:pr-0">
              <%= link_to resident ,class: '' do %>
                <i class="fa-solid fa-bars"></i>
              <% end %>
              <%= button_to resident,method: :delete ,class: '' do %>
                <i class="fa-solid fa-trash text-red-500"></i>
              <% end %>
            </td>
          <% end %>
        <% end %>
      </tr>
    </tbody>
  </table>
<% end %>
