<div class="w-full p-3">
  <% if notice.present? %>
    <p
      class="
        py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block
      "
      id="notice"
    ><%= notice %></p>
  <% end %>
  <% content_for :title, "Residents" %>
  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Residents</h1>
    <div class="flex gap-2 items-center">
      <%= link_to "New resident",
      new_resident_path,
      class: "btn btn-outline-dark" %>
      <%= link_to "Update Monthly Rent", create_rent_sessions_path, class: "btn btn-outline-dark" %>
      <%= link_to "Archived residents", archives_path, class: "btn btn-outline-dark" %>
    </div>
  </div>
  <%= render "resident_table", residents: @residents, show: true %>
</div>
