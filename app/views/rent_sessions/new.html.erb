<div class="mx-auto md:w-2/3 w-full">
  <h1 class="font-bold text-4xl">New rent session</h1>

  <%= render "form", rent_session: @rent_session %>

  <%= link_to "Back to rent sessions",
  rent_sessions_path,
  class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  <div class="mt-5">
    <h2 class="font-bold text-2xl">Apartments</h2>
    <ul>
      <% @apartments.each do |apartment| %>
        <li><%= apartment.apartmentnumber %></li>
      <% end %>
    </ul>
  </div>
  <!--show apartments by iterating over @residents variable and showing the
  name-->
  <div class="mt-5">
    <h2 class="font-bold text-2xl">Residents</h2>
    <ul>
      <% @residents.each do |resident| %>
        <li><%= resident.name %></li>
      <% end %>
    </ul>
  </div>

</div>
