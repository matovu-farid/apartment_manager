<!--Receipt for the payment-->
<div class="grid place-items-center h-[70vh] bg-gray-100 p-6">
  <div class="bg-white shadow-lg rounded-lg p-8 max-w-md w-full">
    <h2 class="text-2xl font-bold mb-4 text-center">Receipt</h2>
    <% [
      {name: "Name", value: @resident.name},
      {name: "Amount", value: format_currency(@payment.amount)},
      {name: "Payment Date", value: @payment.date.strftime("%B %d, %Y")},
      {name: "Apartment", value: @apartment.name},
      {name: "Floor", value: @apartment.floor},
      {name: "Monthly Rent", value: format_currency(@resident.rent)},
      {name: "Monthly Payments", value: format_currency(@resident.current_month_payment)},
      {name: "Receipt Date", value: Time.now.strftime("%B %d, %Y")},
    ].each do |data| %>
      <div class="flex justify-between border-b border-gray-200 py-2">
        <span class="font-bold text-gray-700"><%= data[:name] %></span>
        <span class="text-gray-900"><%= data[:value].camelcase %></span>
      </div>
    <% end %>
  </div>
</div>
