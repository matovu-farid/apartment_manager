<div>
  <p style="color: green"><%= notice %></p>
  <h1 class="font-bold">Payments </h1>
  
  <% if @resident and Ability.new(current_user).can? :manage, @resident %>
    <div class='d-flex justify-content-end'>
      <%= link_to "New payment",new_resident_payment_path(@resident), class: "btn btn-outline-primary" %>
    </div>
  <% else %>
    <div class='d-flex justify-content-end'>
      <%= link_to "New payment", new_payment_path, class: "btn btn-outline-primary" %>
    </div>
  <% end %>
  <% if @payments.empty? %>
    <p class="text-secondary fst-italic fwt-bold">No payments have been made yet.</p>
  <% else %>
    <div id="payments">
      <%= render 'payment_table', rent_session: @rent_session, payments: @payments ,resident: @resident %>
    </div>
  <% end %>
</div>
