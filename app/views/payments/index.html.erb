<p style="color: green"><%= notice %></p>
<h1>Payments</h1>
<div class='d-flex justify-content-end'>
  <%= link_to "New payment",
  new_resident_payment_path(@resident), 
  class: "btn btn-outline-primary" %>
</div>
<% if @payments.empty? %>
  <p class="text-secondary fst-italic fwt-bold">No payments have been made yet.</p>
<% else %>
  <div id="payments">
    <%= render 'payment_table', rent_session: @rent_session, payments: @payments ,resident: @resident %>
  </div>
<% end %>
