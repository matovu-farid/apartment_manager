<div id="<%= dom_id payment, class:'flex flex-row inline' %>">
  <td
    class="
      whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-gray-900 sm:pl-0
    "
  >
    <%= payment.rent_session.resident.name %>
  </td>
  <td
    class="
      whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-gray-900 sm:pl-0
    "
  >
    <% if payment.date %>
      <%= payment.date.strftime("%B %d, %Y") %>
    <% end %>
  </td>
  <td
    class="
      whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-gray-900 sm:pl-0
    "
  >
    <%= format_currency(payment.amount) %>
  </td>
</td>
</div>
