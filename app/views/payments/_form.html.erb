<div data-controller='payment'>
  <%= form_with(model: [resident, payment]) do |form| %>
    <% if payment.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(payment.errors.count, "error") %>
          prohibited this payment from being saved:</h2>
        <ul>
          <% payment.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <p>(Balance: <span data-payment-target='balance' data-balance=<%= rentLeft rent_session %>><%=format_currency rentLeft rent_session%></span>)</p>
      <div >
        <%= form.label :amount, class: "form-label" %>
        <%= form.number_field :amount, class: "form-control",  data: {  payment_target: "payment", action: 'input->payment#onEditPayment',max: maxPayment( rent_session, current = payment.amount ||= 0) }, step: 100 %>
      </div>
      <div class="flex flex-col gap-2">
        <%= form.label :date, class: "form-label" %>
        <div>
          <%= form.date_select :date, class: "form-control", required: true %>
        </div>
      </div>
      <div class='pt-3'>
        <%= form.submit class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
